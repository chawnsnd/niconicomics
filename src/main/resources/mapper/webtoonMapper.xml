<!-- 웹툰 처리 SQL -->
<mapper namespace="com.niconicomics.core.dao.WebtoonMapper">

<!-- 웹툰 저장 -->
	<insert id="insertWebtoon" parameterType="webtoon">
		insert into tbl_webtoon(
			webtoon_id
			,title
			,summary
			,author_id
			,hashtag
			,mgr_hashtag
			,thumbnail
		)values(
			seq_webtoon.nextval
			,#{title}
			,#{summary}
			,#{authorId}
			,#{hashtag}
			,#{mgrHashtag}
			,#{thumbnail}
		)
	</insert>
<!-- 웹툰 정보 읽기 -->
	<select id="getWebtoon" parameterType="int" resultType="webtoon">
		select 	webtoon_id 
			title 
			,summary 
			,author_id 
			,hashtag 
			,mgr_hashtag 
			,thumbnail 
			,hits 
			,end 
		from tbl_webtoon
		where webtoon_id = #{webtoonId}
	</select>	
<!-- 에피소드 입력 -->
	<insert id="episodeInsert" parameterType="episode">
		insert into tbl_episode(
			episode_id
			,no
			,title
			,webtoon_id
			,thumbnail
		)values(
			seq_episode
			,#{no}
			,#{title}
			,#{webtoon_id}
			,#{thumbnail}
		)
	</insert>


